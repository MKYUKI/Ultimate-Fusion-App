# .env ファイル

# Streamlit設定
STREAMLIT_SERVER_PORT=8501
STREAMLIT_THEME_MODE=dark

# Google Cloudの認証情報
GCP_SERVICE_ACCOUNT_JSON_PATH=path/to/your-service-account.json
GCP_PROJECT_ID=your-project-id

# OpenAI APIキー
OPENAI_API_KEY=your-openai-api-key

# YouTube APIキー
YOUTUBE_API_KEY=your-youtube-api-key

# Replicate APIトークン
REPLICATE_API_TOKEN=your-replicate-api-token

# データベース接続情報
DATABASE_URL=postgresql://username:password@localhost:5432/ultimate_fusion_db

# Cookieの設定（Streamlit Authenticator用）
COOKIE_NAME=ultimate_fusion_app_cookie
COOKIE_KEY=your-cookie-key
COOKIE_EXPIRY_DAYS=30

# セキュリティ設定
SECRET_KEY=your-secret-key
